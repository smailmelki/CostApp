<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CostApp.EditPopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource OffBlack}}"
             Size="330,300">
    <VerticalStackLayout>
        <Label Text="Add New Item" HeightRequest="50" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Grid ColumnDefinitions="*,2*" RowDefinitions="50,50,50" Margin="20">
            <Label Grid.Column="0" Grid.Row="0" Text="Amount"/>
            <Label Grid.Column="0" Grid.Row="1" Text="Date"/>
            <Label Grid.Column="0" Grid.Row="2" Text="Note"/>
            <Entry Grid.Column="1" Grid.Row="0" x:Name="txtAmount" Placeholder="Amount"/>
            <DatePicker Grid.Column="1" Grid.Row="1" x:Name="dtpDate"/>
            <Entry Grid.Column="1" Grid.Row="2" x:Name="txtNote" Placeholder="Note"/>
        </Grid>
        <HorizontalStackLayout>
            <Button x:Name="BtnSave" Text="save" Clicked="OnSaveClicked"/>
            <Button x:Name="BtnCancel" Text="cancel" Clicked="OnCancelClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>